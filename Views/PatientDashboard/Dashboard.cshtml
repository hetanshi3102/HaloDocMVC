@model HaloDocDataAccess.ViewModels.PatientDashboard;
@{
    Layout = "_PatientDashboardLayout";
    ViewData["Title"] = "Dashboard";
    ViewData["User Name"] = Model.UserName;
}
<div class="dashboard">
<p class="medHis">
    <b>Medical History</b>
    <button type="button" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        Create New Request
    </button>
</p>
    <table class="table" id="table_dashboard">
        <colgroup>
            <col span="1" style="width: 15%;">
            <col span="1" style="width: 70%;">
            <col span="1" style="width: 15%;">
        </colgroup>

        <thead class="table-head align-middle">
            <tr>
                <th>Created Date</th>
                <th>Current Status</th>
                <th>Document</th>
            </tr>
        </thead>
        <tbody class="table-body align-middle">
            @for (int i = 0; i < Model.Requests.Count; i++)
            {
                <tr class="table-row">
                    <td>
                        @Model.Requests[i].CreatedDate
                    </td>
                    <td>@Model.Requests[i].Status</td>
                    <td>
                        @if (Model.DocumentCount[i] >= 0)
                        {
                            <a asp-controller="Patient" asp-action="ViewDocument" asp-route-requestId="@Model.Requests[i].RequestId" class="btn btn-outline-info shadow-none night-mode-btn">
                                <span>(@Model.DocumentCount[i]) Documents</span>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Create New Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Here I want to create a new request for...</p>
                <button type="button" class="btn btn-outline-primary"><a class="modal-link sec-btn" asp-controller="RequestByPatient" asp-action="PostSomeoneElse">Some one Else</a></button>
                <button type="button" class="btn btn-primary"><a class="modal-link " asp-controller="RequestByPatient" asp-action="RequestForMe">Me</a></button>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Continue</button>
            </div>
        </div>
    </div>
</div>
</div>